---
import { Icons } from '@/components/ui/icons';
import Layout from '../layouts/Layout.astro';
import { Separator } from '@/components/ui/separator';
import { ContactForm } from '@/components/ContactForm';
import { ShineBorder } from '@/components/ui/shine-pulse';
import { EMAIL } from '@/config/consts';
import { AnimatedShinyText } from '@/components/ui/shiny-text';

const mode = import.meta.env.MODE;
---

<Layout title='Contact' description='Lorem ipsum dolor sit amet'>
  <main class='main-container sm:grid sm:place-content-center'>
    <div class='grid grid-cols-1 m-4 sm:0'>
      <ShineBorder color={['#dc2626', '#D2B48C', '#FFBE7B', '#fff6f4']}>
        <section>
          <h1 class='uppercase'>Contact Me</h1>
          <Separator orientation='horizontal' />
          <div class='flex justify-center items-center mt-4'>
            <a href={`mailto:${EMAIL}`}>
              <AnimatedShinyText>
                {EMAIL}
              </AnimatedShinyText>
            </a>
          </div>
          <div class='my-4 flex flex-row gap-2 items-center justify-center'>
            <a href='tel:+351968855958'>+351 96 8855958</a>
            <a href='https://api.whatsapp.com/send?phone=351968855958'
              ><Icons.Whatsapp /></a
            >
            <a href='https://t.me/tatumelg'><Icons.Telegram /></a>
          </div>
          <Separator orientation='horizontal' />
        </section>

        <ContactForm client:load mode={mode} />
      </ShineBorder>
    </div>
  </main>
</Layout>
