const SKILLS = [
  'Communication',
  'Empathy',
  'Conflict Resolution',
  'Teamwork',
  'Problem-Solving',
  'Adaptability',
  'Negotiation',
  'Leadership',
  'Positive Attitude',
  'Active Listening',
];

const ACADEMIC = [
  "Bachelor's in Computer Science",
  'High School Diploma',
  "Master's in Computer Science",
];
---

<Layout title='Resume' description='Lorem ipsum dolor sit amet'>
  <main class='main-container 2xl:grid 2xl:place-content-center'>
    <Particles
      client:idle
      className='absolute inset-0 -z-10'
      quantity={1000}
      ease={80}
      color={'#000000'}
      refresh
    />
    <h1 class='invisible'>Resume</h1>
    <div class='grid grid-cols-1 md:grid-cols-7 p-6 sm:p-0 px-4 md:px-20'>
      <!-- Work experience -->
      <div class='flex flex-col gap-2 col-start-1 col-end-4'>
        <h2 class='text-right text-primary font-bold text-xl xl:text-2xl'>
          Work Experience
        </h2>
        {WORK_EXPERIENCE.map((props) => <WorkExperienceCard {...props} />)}
      </div>

      <!-- Separator -->
      <Separator
        orientation='vertical'
        className='mx-auto col-start-4 col-end-4'
      />

      <!-- Academic and more... -->
      <div
        class='flex flex-col gap-12 justify-start items-start col-start-5 col-end-8'
      >
        <div>
          <h2 class='text-primary font-bold text-xl xl:text-2xl'>
            Academic Background
          </h2>
          <ul class='list-disc'>
            {ACADEMIC.map((skill) => <li>{skill}</li>)}
          </ul>
        </div>

        <div>
          <h2 class='text-primary font-bold text-xl xl:text-2xl'>Skills</h2>
          <ul class='list-disc'>
            {SKILLS.map((skill) => <li>{skill}</li>)}
          </ul>
        </div>

        <div>
          <h2 class='text-primary font-bold text-xl xl:text-2xl'>
            Honours & Activities
          </h2>
          <p>
            Tempor occaecat consequat irure do aliqua sit aute eiusmod. Aliqua
            ad labore occaecat deserunt et adipisicing in. Sunt voluptate
            laboris ullamco excepteur ullamco magna duis adipisicing. Tempor
            enim eiusmod culpa proident eiusmod sunt aute ea aliqua eu deserunt
            in consequat cillum. Dolore do sunt ea voluptate voluptate sunt
            adipisicing mollit id.
          </p>
        </div>
      </div>
    </div>
    <div class='block h-20'></div>
  </main>
</Layout>
