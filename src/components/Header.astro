---
import HeaderLink from './HeaderLink.astro';
import { FULL_NAME, NAVIGATION } from '../consts';
import { Separator } from './ui/separator';

---

<header class="m-0 p-0 bg-background shadow-[0 2px 8px rgba(var(--black), 5%)]">
	<nav class="flex items-center justify-between py-4 gap-2">
		<div class="flex-0">
		<h2 class="text-xl font-header font-semibold"><a href="/">{FULL_NAME}</a></h2>
	  </div>
		<div class="flex flex-row gap-4 items-center justify-end flex-1 ">
			{NAVIGATION.map(({title,url},index)=> (
			<div class="flex flex-row gap-4">
				<HeaderLink href={url}>{title}</HeaderLink>
				<div class="shrink-0">
				{NAVIGATION?.length -1 !== index && <Separator orientation="vertical"/>}
			</div>
		</div>
				))}
		</div>
	</nav>
</header>
