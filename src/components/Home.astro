---
import { Button } from '@components/ui/button';
import { Card } from '@components/ui/card';
import { HERO_ONELINER } from 'src/consts';
import { SITE_DESCRIPTION,SITE_SUBTITLE } from 'src/consts';
import { BorderBeam } from './BorderBeam';
import { Particles } from '@components/ui/particles';

---

<main class="h-full w-full grid place-content-center">
  <Particles
  client:idle
  className="absolute inset-0 -z-10"
  quantity={1000}
  ease={80}
  color={'#000000'}
  refresh
/>
  <div class="flex flex-col-reverse lg:flex-row gap-2 max-w-[90%] mx-auto 2xl:mb-40 relative p-4 rounded-3xl items-center">
    <Card className="grid place-content-center flex-[2] border-none m-auto p-4 shadow-none relative mt-8 md:mt-0">
      <BorderBeam/>
      <div class="flex flex-col gap-6">

      <h1 class="text-2xl md:text-5xl">{HERO_ONELINER}</h1>
      <h2 class="text-xl md:text-2xl">{SITE_SUBTITLE}</h2>
      <p>{SITE_DESCRIPTION}</p>
      <div class="flex justify-start items-center max-w">
      <a href="/contact" class="no-underlined w-full sm:w-[initial] z-50"><Button client:load className="w-full sm:w-[initial]">Get in touch</Button></a>
    </div>
    </div>
    </Card>
    <!-- <Separator orientation="vertical"/> -->
    <picture class="relative aspect-[4/3] grid place-content-center w-[150px] md:w-[320px] h-[160px] md:h-[360px] mt-8 md:mt-0">
  <!-- image section -->
      <!-- <img src="/public/avatar.jpg" alt="photo" class="w-80 h-[340px] rounded-full"/> -->
    </picture>

  </div>
</main>
<style>
  picture{
    flex-shrink: 0;
    background: url('/public/avatar.jpg');
    border-radius: 50%;
    background-size: cover;
    position: relative;
  }

  picture::after {
      content: '';
      width: 100%;
      height: 100%;
      inset: 0;
      position: absolute;
      background: inherit;
      filter: blur(15px) contrast(200%);
      border-radius: 50%;

      z-index: -1;
  }
</style>
