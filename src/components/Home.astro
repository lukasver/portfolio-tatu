---
import { Card } from '@/components/ui/card';
import { HERO_ONELINER } from 'src/consts';
import { SITE_DESCRIPTION,SITE_SUBTITLE } from 'src/consts';
import { BorderBeam } from './BorderBeam';
import { Particles } from '@/components/ui/particles';
import {Button} from '@/components/ui/button';

---

<main class="h-full w-full md:grid md:place-content-center overflow-hidden sm:overflow-auto ">
  <Particles
  client:idle
  className="absolute inset-0 -z-10"
  quantity={1000}
  ease={80}
  color={'#000000'}
  refresh
/>
  <div class="h-full sm:h-[initial] flex flex-col-reverse lg:flex-row gap-2 sm:max-w-[90%] sm:mx-auto 2xl:mb-40 relative p-4 rounded-3xl items-center">
    <Card className="grid place-content-center flex-[2] border-none m-auto p-4 shadow-none relative mt-8 md:mt-0">
      <BorderBeam/>
      <div class="flex flex-col gap-6">

      <h1 class="text-2xl md:text-5xl">{HERO_ONELINER}</h1>
      <h2 class="text-xl md:text-2xl">{SITE_SUBTITLE}</h2>
      <p>{SITE_DESCRIPTION}</p>
      <div class="flex justify-start items-center max-w">
      <a href="mailto:taniageuna@gmail.com" class="no-underlined w-full sm:w-[initial] z-50"><Button client:load className="w-full sm:w-[initial]">Get in touch</Button></a>
    </div>
    </div>
    </Card>
    <picture class="relative aspect-[4/3] grid place-content-center w-[170px] md:w-[330px] h-[180px] md:h-[360px] mt-8 md:mt-0">
    </picture>

  </div>
</main>
<style>
  picture{
    flex-shrink: 0;
    background: url('/public/avatar.jpg');
    border-radius: 50%;
    background-size: cover;
    position: relative;
  }

  picture::after {
      content: '';
      width: 100%;
      height: 100%;
      inset: 0;
      position: absolute;
      background: inherit;
      filter: blur(15px) contrast(200%);
      border-radius: 50%;

      z-index: -1;
  }
</style>
